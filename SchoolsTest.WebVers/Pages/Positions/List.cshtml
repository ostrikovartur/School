@page "/positions"
@model SchoolsTest.WebVers.Pages.Positions.List
@{
}
<h1>
    List positions
    <a asp-page="../Positions/Add" class="btn btn-lg btn-info">Add position</a>
</h1>
<table align="left" width="90%" class="table-bordered border-primary-subtle bg-light border-3 float-lg-start">
    @foreach (var position in Model.Positions)
    {
        <tr class="text-center fw-semibold">
            <td>@position.Id</td>
            <td>@position.Name</td>
@*            <td><a asp-page="Floor" asp-route-id="@position.Id">Select position</a></td>
            <td>|</td>*@
            <td><a asp-page="Edit" asp-route-id="@position.Id" class="btn btn-warning">Edit position</a></td>
        </tr>
    }
</table>