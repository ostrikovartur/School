@page "/rooms/{id}/edit"
@using SchoolsTest.Models;
@model SchoolsTest.WebVers.Pages.Rooms.Edit
@{
}
<h2>Edit room</h2>
<form method="post">
    <table align="left">
        <tr>
            <td>Room number:</td>
            <td><input type="number" asp-for="Room.Number" /></td>
        </tr>
        <tr>
            <td>Room type:</td>
        </tr>
            <td>
                @foreach (var roomType in Model.RoomTypes)
                {
                    var labelId = $"rt-{roomType.Id}";
                    var cheched = Model.Room.RoomTypes.Contains(roomType);

                    <label for="@labelId">
                        <input id="@labelId" type="checkbox" name="roomTypeIds[]" value="@roomType.Id" checked="@cheched" />
                        @roomType.Name
                    </label>
                }
            </td>
@*        <tr>
            <td>Floor number:</td>
            <td>
                <select asp-for="Room.FloorId">
                    @foreach (var floor in Model.Floors)
                    {
                        <option value="@floor.Id">@floor.Number</option>
                    }
                </select>
            </td>
        </tr>*@
        <tr>
            <td><a asp-page="List"> <input type="submit" value="Update" asp-page-handler="Update" class="btn btn-success text-dark"/> </a></td>
        </tr>
        <tr>
            <td><a asp-page="List"> <input type="submit" value="Delete" asp-page-handler="Delete" class="btn btn-danger text-dark" /> </a></td>
        </tr>
    </table>
    <input type="hidden" asp-for="Room.Floor.Id" />
    <input type="hidden" asp-for="Room.Id" />
</form>