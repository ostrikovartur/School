@page "/{floorId}/addroom"
@model RoomAdd
@{
}
<h2>@Model.Message</h2>
<form method="post">
    <table align="left">
        <tr>
            <td>Room number:</td>
            <td><input type="number" name="roomNumber" /></td>
        </tr>
        <tr>
            <td>Room type:</td>
        </tr>
            <td>
                @foreach (var roomType in Model.RoomTypes)
                {
                    <input type="checkbox" name="roomTypeIds[]" value="@roomType.Id" /> @roomType.Name
                }
            </td>
        <tr>
            <td><input type="submit" /> </td>
        </tr>
    </table>
</form>