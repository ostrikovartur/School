@page "/schools/edit/{id}"

@model Edit

@section Styles
{
    <link rel="stylesheet" href="~/edit/list.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
}

<h1>Edit school</h1>
<form method="post">
<table class="table-hover table-bordered border-primary-subtle border-3" align="left" border="1" width="80%">
    <tr>
        <td>Name</td>
        <td>
            <input type="text" asp-for="School.Name"/>
        </td>
    </tr>
    <tr>
        <td>Country</td>
        <td><input type="text" asp-for="School.Address.Country" /></td>
    </tr>
    <tr>
        <td>City</td>
        <td><input type="text" asp-for="School.Address.City"/></td>      
    </tr>
    <tr>
        <td>Street</td>
        <td><input type="text" asp-for="School.Address.Street"/></td>      
    </tr>
    <tr>
        <td>Postal code</td>
        <td><input type="text" asp-for="School.Address.PostalCode"/></td>      
    </tr>
    <tr>
        <td>Opening date</td>
        <td><input type="date" asp-for="School.OpeningDate"/></td>      
    </tr>
    <tr>
        <td>
            <button type="button">
                <a asp-page="List"> <input type="submit" value="Update" asp-page-handler="Update" class="btn btn-success link-dark" /> </a>
            </button>
        </td>
    </tr>
    <tr>
        <td>
            <button type="button">
                <a asp-page="List"> <input type="submit" value="Delete" asp-page-handler="Delete" class="btn btn-danger link-dark" /> </a>
            </button>
        </td>
    </tr>
</table>
<input type="hidden" asp-for="School.Id" />
</form>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
}