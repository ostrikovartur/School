@page "/schools/edit/{id}"

@model Edit
@{
}
<h1>Edit school</h1>
<form method="post">
<table align="left" width="500px" border="0">
        <tr>
            <td>Name</td>
            <td>
               <input type="text" asp-for="School.Name" />
            </td>
        </tr>
        <tr>
            <td>Country</td>
            <td><input type="text" asp-for="School.Address.Country" /></td>
        </tr>
        <tr>
            <td>City</td>
            <td><input type="text" asp-for="School.Address.City"/></td>      
        </tr>
        <tr>
            <td>Street</td>
            <td><input type="text" asp-for="School.Address.Street"/></td>      
        </tr>
        <tr>
            <td>Postal code</td>
            <td><input type="text" asp-for="School.Address.PostalCode"/></td>      
        </tr>
        <tr>
            <td>Opening date</td>
            <td><input type="date" asp-for="School.OpeningDate"/></td>      
        </tr>
        <tr>
            <td><a asp-page="List"> <input type="submit" value="Update" asp-page-handler="Update" /> </a></td>
        </tr>
        <tr>
            <td><a asp-page="List"> <input type="submit" value="Delete" asp-page-handler="Delete" /> </a></td>
        </tr>
</table>
<input type="hidden" asp-for="School.Id" />
<input type="hidden" asp-for="Director.Id" />
</form>