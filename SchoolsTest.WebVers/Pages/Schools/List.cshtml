@page "/schools"

@model SchoolsList

@section Styles
{
    <link rel="stylesheet" href="~/css/list.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
}

<div class="container-fluid">
    <div class="row">
        <div class="site">
            <div class="header d-xs-flex justify-content-xs-start">
                <h1>
                    List schools
                    <a asp-page="Add" class="btn link-dark btn-info" >
                        Add new school
                    </a>
                </h1>
            </div>
            <table class="table-bordered border-primary-subtle bg-light border-3 float-lg-start">
                @foreach (var school in Model.Schools)
                {
                    <tr class="text-center">
                        <td><p class="text-center fw-semibold">@school.Name</p></td>
                        <td><p class="text-center fw-semibold">@school.Id</p></td>
                        <td>
                            <a asp-page="School" asp-route-id="@school.Id" class="btn bg-success link-dark">
                                Select school
                            </a>
                        </td>
                        <td>
                            <a asp-page="Edit" asp-route-id="@school.Id" class="btn bg-warning link-dark">
                                Edit school
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
}