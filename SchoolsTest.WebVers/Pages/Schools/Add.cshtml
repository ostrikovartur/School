@page "/schools/addSchool"
@model AddSchool
@section Styles
{
    <link rel="stylesheet" href="~/css/add.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
}

<h2>@Model.Message</h2>
<form method="post" >
    <table class="table table-hover table-bordered border-primary-subtle border-3 " align="right" width="80%" border="1">
        <tr>
            <td>Name</td>
            <td><input type="text" name="name"/></td>
        </tr>
        <tr>
            <td>Country</td>
            <td><input type="text" name="country"/></td>
        </tr>
        <tr>
            <td>City</td>
            <td><input type="text" name="city"/></td>      
        </tr>
        <tr>
            <td>Street</td>
            <td><input type="text" name="street"/></td>      
        </tr>
        <tr>
            <td>Postal code</td>
            <td><input type="text" name="postalCode"/></td>      
        </tr>
        <tr>
            <td>Opening date</td>
            <td><input type="date" name="openingDate"/></td>      
        </tr>
        <tr>
            <td>
                <button type="submit" class="btn btn-primary">Save</button>
            </td>
            <td>
                <a asp-page="List" class="btn btn-secondary">Cancel</a>
            </td>
        </tr>
    </table>
</form>

@section Scripts 
{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>
}